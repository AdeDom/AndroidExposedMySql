<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btSelectExposed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Exposed"
        app:layout_constraintBottom_toTopOf="@+id/btInsertExposed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btInsertExposed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Exposed"
        app:layout_constraintBottom_toTopOf="@+id/btSelectSql"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSelectExposed" />

    <Button
        android:id="@+id/btSelectSql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Sql"
        app:layout_constraintBottom_toTopOf="@+id/btInsertSql"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btInsertExposed" />

    <Button
        android:id="@+id/btInsertSql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Sql"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSelectSql" />

</androidx.constraintlayout.widget.ConstraintLayout>